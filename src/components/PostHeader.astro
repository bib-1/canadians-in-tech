---
import Section from './Section.astro';

interface Props {
	name: string;
	company?: string;
}

const { name, company } = Astro.props;

---

<Section>
	<div class="flex flex-col items-center">
		<p class="px-14 pb-4 pt-6 text-center text-4xl font-bold">{name}</p>
		<div class="text-sm">
			<span>{company}</span>
		</div>
	</div>
</Section>
